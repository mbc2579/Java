package ch09;

public class Student {
	
	// °´Ã¼ Çù·Â ¿¹Á¦(¹ö½º ÁöÇÏÃ¶ Å¾½Â ¿¹Á¦)

	String studentName;
	int money;
	
	public Student(String studentName, int money) {
		this.studentName = studentName;
		this.money = money;
	}
	
	public void takeBus(Bus bus) {
		bus.take(1000);
		this.money -= 1000;
	}
	
	public void takeSubway(Subway subway) {
		subway.take(1200);
		this.money -= 1200;
	}
}
